<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.FullScreen.LoginTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.FullScreen.SplashScreenTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MatchWidthMatchHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWidthMatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWidthWrapHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeShimmer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/shimmer_rectangle</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:id">@id/exo_play</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_play</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:id">@id/exo_pause</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_pause</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:id">@id/exo_rew</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_rewind</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:id">@id/exo_ffwd</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_fast_forward</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
